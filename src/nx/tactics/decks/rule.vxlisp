  (base/rule
   :name "Hits: Power"
   :image "images/rule-hits-power.svg"
   :layout base/cardlayout-imageonly)
  (base/rule
   :name "Hits: Rank"
   :summary
    "Determine Hits scored in the Conflict
     Hits:+1 for each card IF:
     * A-J
       OR
     * Rank + Level Bonus > Difficulty

     IF Hits = 0
     THEN Apply an appropriate facedown Damage card and the Conflict ends")
  (base/rule
   :name "How to Play"
   :image "images/rule-howtoplay.svg"
